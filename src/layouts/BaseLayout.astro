---
import "@fontsource/zen-kaku-gothic-new";
import "@fontsource/zen-kaku-gothic-new/900.css";
import "@fontsource/zen-kaku-gothic-new/700.css";
import "@fontsource/zen-kaku-gothic-new/500.css";
import "@fontsource/zen-kaku-gothic-new/400.css";
import "@fontsource/zen-kaku-gothic-new/300.css";
import Footer from "./Footer.astro";
import Header from "./Header.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="FF14のサブマリンボイジャーの残り時間を表示します。ゲームにログインしていない時に残り時間を確認できます。潜水艦4〜24隻分を設定できます。"
    />
    <title>{title}</title>
    <link rel="icon" href="https://ff14-voyager-timer.vercel.app/favicon.ico" />
    <meta property="og:title" content="FF14 サブマリンボイジャー残り時間表示ツール" />
    <meta
      property="og:description"
      content="FF14のサブマリンボイジャーの残り時間を表示します。ゲームにログインしていない時に残り時間を確認できます。潜水艦4〜24隻分を設定できます。"
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://ff14-voyager-timer.vercel.app/" />
    <meta property="og:image" content="https://ff14-voyager-timer.vercel.app/ogp.jpg" />
    <meta property="og:site_name" content="FF14 サブマリンボイジャー残り時間表示ツール" />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-JDR7J7W364"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-JDR7J7W364");
    </script>

    <script>
      (function () {
        const prefersDarkScheme = window.matchMedia("(prefers-color-scheme: dark)").matches;
        const systemTheme = prefersDarkScheme ? "dark" : "light";
        const storedTheme = localStorage.getItem("theme");
        const theme = storedTheme ?? systemTheme;

        document.documentElement.dataset.theme = theme;
        localStorage.setItem("theme", theme);
      })();
    </script>
  </head>
  <body>
    <Header />
    <main class="main">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  /*
  Josh's Custom CSS Reset
  https://www.joshwcomeau.com/css/custom-css-reset/
*/
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }
  * {
    margin: 0;
  }
  body {
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
  }
  img,
  picture,
  video,
  canvas,
  svg {
    display: block;
    max-width: 100%;
  }
  input,
  button,
  textarea,
  select {
    font: inherit;
  }
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    overflow-wrap: break-word;
  }
  #root,
  #__next {
    isolation: isolate;
  }
  /* ここまでリセットCSS */
  :root {
    --bg-primary: #f4f6fd;
    --bg-secondary: #ffffff;
    --bg-card: #ffffff;
    --bg-card-active: #f0f2fb;
    --bg-input: #e9ecf8;
    --bg-toggle-base: #e1e7e8;
    --bg-toggle-active: #ffffff;

    --text-primary: #4a4e69;
    --text-secondary: #7a82a8;
    --text-button: #ffffff;
    --text-accent: #adb2d4;
    --text-toggle: #4a4e69;
    --text-toggle-active: #4a4e69;

    --border-primary: #d5e5d5;
    --border-card-active: #c7d9dd;
    --border-input: #c7d9dd;

    --shadow-sm: 0 0.0625rem 0.125rem 0 rgb(0 0 0 / 0.05);
    --shadow-lg:
      0 0.625rem 0.9375rem -0.1875rem rgb(0 0 0 / 0.1), 0 0.25rem 0.375rem -0.25rem rgb(0 0 0 / 0.1);
  }

  /* .dark { */
  :root[data-theme="dark"] {
    --bg-primary: #2c2f3f;
    --bg-secondary: #4a4e69;
    --bg-card: rgba(74, 78, 105, 0.5);
    --bg-card-active: rgba(173, 178, 212, 0.15);
    --bg-input: rgba(173, 178, 212, 0.2);
    --bg-toggle-base: rgba(173, 178, 212, 0.3);
    --bg-toggle-active: rgba(238, 241, 218, 0.9);

    --text-primary: #eef1da;
    --text-secondary: #c7d9dd;
    --text-button: #4a4e69;
    --text-accent: #adb2d4;
    --text-toggle: #eef1da;
    --text-toggle-active: #2c2f3f;

    --border-primary: rgba(173, 178, 212, 0.4);
    --border-card-active: #adb2d4;
    --border-input: #7a82a8;
  }

  @media (prefers-color-scheme: dark) {
    :root:not([data-theme="light"]) {
      --bg-primary: #2c2f3f;
      --bg-secondary: #4a4e69;
      --bg-card: rgba(74, 78, 105, 0.5);
      --bg-card-active: rgba(173, 178, 212, 0.15);
      --bg-input: rgba(173, 178, 212, 0.2);
      --bg-toggle-base: rgba(173, 178, 212, 0.3);
      --bg-toggle-active: rgba(238, 241, 218, 0.9);

      --text-primary: #eef1da;
      --text-secondary: #c7d9dd;
      --text-button: #4a4e69;
      --text-accent: #adb2d4;
      --text-toggle: #eef1da;
      --text-toggle-active: #2c2f3f;

      --border-primary: rgba(173, 178, 212, 0.4);
      --border-card-active: #adb2d4;
      --border-input: #7a82a8;
    }
  }

  a {
    color: var(--color-link);
    text-decoration: underline;
  }
  a:hover {
    text-decoration: none;
  }
  body {
    font-family: "Zen Kaku Gothic New", sans-serif;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    background-color: var(--bg-primary);
    color: var(--text-primary);
    transition:
      background-color 0.3s,
      color 0.3s;
  }
  .main {
    flex: 1;
    margin: 0 auto;
    padding-bottom: 3rem;
    max-width: 28rem;
    width: 90%;
  }
</style>
